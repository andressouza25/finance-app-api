                "refreshToken": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiIwMWJjYmRhYy1hZGRmLTRmZDktYWRmNS0zMWI2NzFkMGIzMmMiLCJpYXQiOjE3NTczNTI2NDAsImV4cCI6MTc1OTk0NDY0MH0.YxhZl_tB6QDeBfhuppVgyBMazzJvbg21_LNpG85CkS8"
                }
            }
