                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "30c75525-a1b6-49fb-827b-8e5ab73b4bcf"
                },
                "first_name": {
                    "type": "string",
                    "example": "John"
                },
                "last_name": {
                    "type": "string",
                    "example": "Doe"
                },
                "email": {
                    "type": "string",
                    "example": "john@doe.com"
                },
                "password": {
                    "type": "string",
                    "example": "password"
                }
            }
        },
        "UserWithToken": {
            "allOf": [
                {
                    "$ref": "#/definitions/User"
                },
                {
                    "type": "object",
                    "properties": {
                        "tokens": {
                            "type": "object",
                            "properties": {
                                "accessToken": {
                                    "type": "string",
                                    "example": "eyBASOKJDUmimdia1..."
                                },
                                "refreshToken": {
                                    "type": "string",
                                    "example": "duJIAJIBPADMASIKMdMIASM"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "Tokens": {
            "type": "object",
            "properties": {
                "accessToken": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiIwMWJjYmRhYy1hZGRmLTRmZDktYWRmNS0zMWI2NzFkMGIzMmMiLCJpYXQiOjE3NTczNTI2NDAsImV4cCI6MTc1NzM1MzU0MH0.NmijaNHDazTw1Yk-Z4HWT2x9M7eUcWt0dSWksLeP1a6"
